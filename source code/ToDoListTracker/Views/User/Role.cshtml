@using Web.Models.General_Entities
@model CreateRole

<div class="login-form p-5 mx-auto d-flex align-items-center justify-content-center">
    <form method="post" asp-action="Role" asp-controller="User" class="">
        <h3 class="text-center mb-3">Create Role</h3>

        @if (ViewData.ModelState.ContainsKey("RoleError"))
        {
            <div class="alert alert-info mb-3" role="alert">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        }

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mb-3 w-100">Create</button>
    </form>
</div>